    "#define the similarity (in progress)\n",
    "\n",
    "def dice_coefficient(a, b):\n",
    "    a_bigrams = set(a)\n",
    "    b_bigrams = set(b)\n",
    "    overlap = len(a_bigrams & b_bigrams)\n",
    "    return overlap * 2.0/(len(a_bigrams) + len(b_bigrams))\n"
   ]
